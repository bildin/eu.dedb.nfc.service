<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="NfcCheckBox">
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/btn_border</item>
        <item name="android:button">@null</item>
        <!-- <item name="android:drawableEnd">@drawable/btn_switch</item> -->
        <item name="android:drawableRight">@drawable/btn_switch</item>
        <item name="android:padding">8dp</item>
        <item name="android:onClick">onClick</item>
    </style>

    <style name="NfcSetting">
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/btn_border</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="NfcSpinnerDropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:checkMark">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:background">@drawable/btn_border</item>
    </style>

    <style name="NfcSpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="MainTheme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:background">@color/black</item>
        <item name="android:spinnerDropDownItemStyle">@style/NfcSpinnerDropDownItem</item>
        <item name="android:spinnerItemStyle">@style/NfcSpinnerItem</item>
        <!-- <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item> -->
    </style>

    <style name="MainTheme.Translucent" parent="@android:style/Theme.Translucent.NoTitleBar">
        <!-- <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item> -->
    </style>

    <!-- <style name="WindowTitleBackground"> -->
    <!-- <item name="android:background">@color/solid</item> -->
    <!-- </style> -->

</resources>